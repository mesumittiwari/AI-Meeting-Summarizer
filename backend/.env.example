# backend/.env.example

# --- REQUIRED ---
# Get your Google AI API Key from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY="YOUR_GOOGLE_AI_API_KEY"

HUGGING_FACE_API_KEY="your-huggingface-api-key-with-read-functionality"
# --- OPTIONAL ---
# Get your OpenAI API Key from https://platform.openai.com/api-keys
# Required for the audio transcription feature.
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"

# --- OPTIONAL ---
# Get an App Password from your email provider (e.g., Gmail)
# Required for the email summary feature.
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-16-character-gmail-app-password"
EMAIL_RECIPIENT="recipient-email@example.com"